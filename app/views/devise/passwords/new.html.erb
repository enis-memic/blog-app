<h2 style="text-align: center;">Forgot your password?</h2>

<div class="mt-5" style="display: flex; justify-content: center; align-items: center; gap: 20px;">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 500px; height: 30px;" %>
  </div>

  <div class="actions" style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <%= f.submit "Send me reset password instructions", class: 'mb-5', style: "height: 30px;" %>
<%= render "devise/shared/links" %>
  </div>
<% end %>

</div>